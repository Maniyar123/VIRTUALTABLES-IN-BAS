<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="createDialog" title="Create Plant" draggable="true" resizable="true" 
        contentHeight="720px" 
        contentWidth="600px">
        <VBox class="sapUiSmallMargin" renderType="Bare">

            <Label text="Plant Name" design="Bold"/>
            <Input id="inputPlantName"  />

            <Label text="Address" design="Bold"/>
            <Input id="inputAddress"  />

            <Label text="Email" design="Bold"/>
            <Input id="inputEmail"  />

            <Label text="Contact Number" design="Bold"/>
            <Input id="inputContactNum" />

            <!-- <Label text="State ID"/>
            <Input id="inputStateID" placeholder="State ID" /> -->

            <Label text="Area Size" design="Bold"/>
            <Input id="inputAreaSize"  />

            <Label text="Capacity" design="Bold"/>
            <Input id="inputCapacity" />

            <Label text="Monthly Turnover" design="Bold"/>
            <Input id="inputTurnover"  />

            <Label text="Total Employees" design="Bold"/>
            <Input id="inputTotalEmployees" />

            <Label text="Plant Description" design="Bold"/>
            <Input id="inputPlantDescr"  />

            <Label text="Sales Head" design="Bold"/>
            <Input id="inputSalesHead"  />

            <Label text="Established Year" design="Bold"/>
            <Input id="inputEstablishedYear"  />

            <Label text="Most Selling Product" design="Bold"/>
            <Input id="inputMostSelling" />

            <Label text="Lowest Selling Product" design="Bold"/>
            <Input id="inputLowestSelling" />

            <Label text="Operational Status" design="Bold"  />
            <Input id="switchOperational"  placeholder="Give The Value Ture/False"/>
            
                <VBox id="branchesFormVBox" visible="false"></VBox> <!-- Initially hidden -->
        </VBox>

        <beginButton>
            <Button icon="sap-icon://add" text="Add Branches" press="onButtonPress" id="addBranchesButton"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelCreateDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
