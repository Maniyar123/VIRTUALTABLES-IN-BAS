<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog
        id="plantValueHelpDialog"
        title="Select Country"
        class="sapUiResponsiveContentPadding">
        
        <List
            id="plantValueHelpList"
            items="{plantModel>/plants}">
            <items>
                <StandardListItem 
                    title="{plantModel>PU_ID}" 
                    type="Active"
                    press="onSelectPlant"/>
            </items>
        </List>

        <beginButton>
            <Button text="Close" press="onClosePlantDialog" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
